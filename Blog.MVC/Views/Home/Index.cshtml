@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<section id="hero">
	<div class="hero-container">
		<div id="heroCarousel" data-bs-interval="5000" class="carousel slide carousel-fade" data-bs-ride="carousel">

			<ol class="carousel-indicators" id="hero-carousel-indicators"></ol>

			<div class="carousel-inner" role="listbox">

				<!-- Slide 1 -->
				<div class="carousel-item active" style="background-image: url(assets/img/slide/slide-1.jpg)">
					<div class="carousel-container">
						<div class="carousel-content">
							<h2 class="animate__animated animate__fadeInDown"><span>ForeSight</span></h2>
							<p class="animate__animated animate__fadeInUp">ForeSight'da herkes yazabilir. Düşünce liderleri, gazeteciler, uzmanlar ve benzersiz bakış açılarına sahip bireyler burada düşüncelerini paylaşıyor.</p>
							<a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası</a>
						</div>
					</div>
				</div>

				<!-- Slide 2 -->
				<div class="carousel-item" style="background-image: url(assets/img/slide/slide-2.jpg)">
					<div class="carousel-container">
						<div class="carousel-content">
							<h2 class="animate__animated fanimate__adeInDown"><span>ForeSight</span></h2>
							<p class="animate__animated animate__fadeInUp">Dünyanın dört bir yanından bağımsız yazarların eserlerini, öne çıkardığımız hikayeleri ve önde gelen yazarları ve kendi blog ve yayın grubumuza ilişkin akıllı değerlendirmeleri bulacaksınız.</p>
							<a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası</a>
						</div>
					</div>
				</div>

				<!-- Slide 3 -->
				<div class="carousel-item" style="background-image: url(assets/img/slide/slide-3.jpg)">
					<div class="carousel-container">
						<div class="carousel-content">
							<h2 class="animate__animated animate__fadeInDown"><span>ForeSight</span></h2>
							<p class="animate__animated animate__fadeInUp">Herhangi bir konudaki düşüncelerinizi paylaşmak, bir izleyici kitlesiyle bağlantı kurmak, çeşitli yayınlama araçlarıyla kendinizi ifade etmek ve hatta işiniz için para kazanmak kolay ve ücretsizdir.</p>
							<a href="" class="btn-get-started animate__animated animate__fadeInUp">Daha Fazlası</a>
						</div>
					</div>
				</div>

			</div>

			<a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
				<span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
			</a>

			<a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
				<span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
			</a>
			<div class="blog-pagination">
				<ul class="justify-content-center">
					<li><a href="#">1</a></li>
					<li class="active"><a href="#">2</a></li>
					<li><a href="#">3</a></li>
				</ul>
			</div>
		</div>
	</div>
</section><!-- End Hero -->
<br />
<br />
<br />
<br />
<br />

<section style="padding: 0 0 40px 0 !important">
	<div class="container-lg mt-3" data-aos="fade-up">
		<div class="row">
			<div class="col-lg-12 entries">
				<article class="entry mt-lg-5">
					<section id="testimonials" class="testimonials" style="padding-bottom:0px">
						<div class="container">

							<div class="section-title">
								<h2>Trend Makaleler</h2>
								<p>İşte ForeSight'ta haftanın en beğenilen makaleleri...</p>
							</div>

						</div>
					</section><!-- End Testimonials Section -->
					<h3 style="text-align:center"></h3>
					@await Component.InvokeAsync("TrendingArticles")
				</article><!-- End blog entry -->
			</div><!-- End blog entries list -->
		</div>
	</div>
</section>

<section id="blog" class="blog">
	<div class="container" data-aos="fade-up">
		<div class="row">
			<div class="col-lg-8">
				@await Component.InvokeAsync("MostReadArticles")
			</div>

			<div class="col-lg-4">

				<div class="sidebar">

					<h3 class="sidebar-title">Ara</h3>
					<div class="sidebar-item search-form">
						<form action="">
							<input type="text">
							<button type="submit"><i class="bi bi-search"></i></button>
						</form>
					</div><!-- End sidebar search formn-->


					<h3 class="sidebar-title">Güncel Makaleler</h3>
					<div class="sidebar-item recent-posts">
						@await Component.InvokeAsync("LatestArticles")

					</div><!-- End sidebar recent posts-->

					<h3 class="sidebar-title">Etiketler</h3>
					<div class="sidebar-item tags">
						<ul>
							@await Component.InvokeAsync("AllTag")
							@*<li><a href="programlama">Programlama</a></li>
							<li><a href="tag/kisiselGelisim">Kişisel Gelişim</a></li>
							<li><a href="tag/teknoloji">Teknoloji</a></li>
							<li><a href="tag/politika">Politika</a></li>
							<li><a href="tag/pazarlama">Pazarlama</a></li>
							<li><a href="tag/yasam">Yaşam</a></li>
							<li><a href="tag/chatgpt">Chatgpt</a></li>
							<li><a href="tag/google">Google</a></li>
							<li><a href="tag/kitaplar">Kitaplar</a></li>
							<li><a href="tag/twitter">Twitter</a></li>
							<li><a href="tag/buyukVeri">Buyuk Veri</a></li>*@
						</ul>
					</div><!-- End sidebar tags-->

				</div><!-- End sidebar -->

			</div><!-- End blog sidebar -->
		</div>
	</div>
</section><!-- End Blog Section -->
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


