@model List<ArticleViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@foreach (var item in Model)
{
	<div class="post-item clearfix">
	<img src="~/uploads/@item.CoverPictureUrl" alt="">
		<h4>@Html.RouteLink(item.Title, routeName: "articledetail", routeValues: new { controller = "Article", action = "ArticleDetail", articleUrl = @item.ArticleUrl},new { @class = "linkBlck" })</h4>
	<time datetime="2020-01-01">@item.CreatedTimeStr</time>
</div>
}
